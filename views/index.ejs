<%- include ('partials/header.ejs') %>
<body>
    <%- include ('partials/navbar.ejs') %>

    <div class="container">
        <hr>
        <h1>Questions</h1>
        <hr>
        <a href="/ask" class="btn btn-primary">Ask away!</a>
        <hr>
        <% questions.forEach(question => { %>
            <br>
            <div class="card">
                <div class="card-body">
                    <h3><%= question.title %></h3>
                    <div class="card-footer">
                        <a href="/question/<%= question.id %>" class="btn btn-primary">Reply</a>
                    </div>
                </div>
            </div>
        <% }) %>
    </div>

</body>
<%- include ('partials/footer.ejs') %>
